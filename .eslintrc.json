{
	"env": {
		"browser": true,
		"commonjs": false,
		"es6": true,
		"node": false,
		"mocha": false
	},
	"parserOptions": {
		"ecmaVersion": "latest",
		"ecmaFeatures": {
			"jsx": true
		},
		"sourceType": "module"
	},
	"rules": {
		"no-const-assign": "error",
		"no-this-before-super": "warn",
		"no-unreachable": "warn",
		"no-unused-vars": "warn",
		"constructor-super": "warn",
		"valid-typeof": "warn",
        "curly": "warn",
        "eqeqeq": "warn",
        "no-throw-literal": "warn"
	}
}
